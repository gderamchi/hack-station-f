// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts  Account[]
  sessions  Session[]
  scripts   Script[]
  campaigns Campaign[]
  companies Company[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Script {
  id          String   @id @default(cuid())
  userId      String
  companyName String
  industry    String?
  description String?  @db.Text
  targetMarket String? @db.Text
  knowledgeSource String? @db.Text
  content     String   @db.Text
  status      String   @default("draft") // draft, approved, rejected
  metadata    Json?    // Additional metadata like generation params
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  campaigns Campaign[]

  @@index([userId])
  @@index([status])
  @@map("scripts")
}

model Campaign {
  id              String    @id @default(cuid())
  userId          String
  name            String
  scriptId        String
  voiceId         String
  dailyLimit      Int       @default(50)
  timeWindows     Json      // Array of {start: string, end: string}
  activeDays      Json      // Array of numbers (0-6, Sunday-Saturday)
  maxAttempts     Int       @default(3)
  status          String    @default("draft") // draft, active, paused, completed
  totalCalls      Int       @default(0)
  successfulCalls Int       @default(0)
  failedCalls     Int       @default(0)
  launchedAt      DateTime?
  completedAt     DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  script    Script     @relation(fields: [scriptId], references: [id], onDelete: Cascade)
  prospects Prospect[]
  calls     Call[]

  @@index([userId])
  @@index([status])
  @@map("campaigns")
}

model Prospect {
  id          String   @id @default(cuid())
  campaignId  String
  firstName   String
  lastName    String
  email       String?
  phone       String
  company     String?
  title       String?
  status      String   @default("pending") // pending, contacted, completed, failed
  metadata    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  campaign Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  calls    Call[]

  @@index([campaignId])
  @@index([status])
  @@index([phone])
  @@map("prospects")
}

model Call {
  id              String    @id @default(cuid())
  campaignId      String
  prospectId      String
  twilioCallSid   String?   @unique
  retellCallId    String?   @unique // Retell AI call ID
  retellAgentId   String?   // Retell AI agent ID used for this call
  fromNumber      String
  toNumber        String
  status          String    @default("queued") // queued, ringing, in-progress, completed, failed, busy, no-answer, canceled
  direction       String    @default("outbound-api")
  duration        Int?      // in seconds
  recordingUrl    String?
  recordingSid    String?
  cost            String?   // Twilio cost in USD
  errorCode       String?
  errorMessage    String?
  answeredBy      String?   // human, machine_start, machine_end_beep, machine_end_silence, machine_end_other, fax, unknown
  startedAt       DateTime?
  endedAt         DateTime?
  metadata        Json?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  campaign Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  prospect Prospect @relation(fields: [prospectId], references: [id], onDelete: Cascade)

  @@index([campaignId])
  @@index([prospectId])
  @@index([twilioCallSid])
  @@index([retellCallId])
  @@index([status])
  @@index([createdAt])
  @@map("calls")
}

model Company {
  id                   String   @id @default(cuid())
  userId               String
  name                 String
  industry             String?
  size                 String?
  website              String?
  description          String?  @db.Text
  targetIndustries     String[] @default([])
  targetCompanySize    String[] @default([])
  targetLocations      String[] @default([])
  targetRoles          String[] @default([])
  targetCriteria       String?  @db.Text
  knowledgeSource      String   @db.Text
  knowledgeType        String   // pdf, url, text
  onboardingCompleted  Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("companies")
}
